{
    "compilerOptions": {
        "target": "es6",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "strictPropertyInitialization":false,
        "baseUrl": ".",
        "paths": {
            "@film-fusion/*": [
                "packages/*/src"
            ],
            "tslib": [
                "node_modules/tslib/tslib.d.ts"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "packages/*/src",
        "apps/*/*",
        "vite.config.ts",
        "vitest.config.ts",
        "tsconfig.node.json"
    ]
}
