{
    "compilerOptions": {
        "target": "es5",
        "module": "ESNext",
        "moduleResolution": "node",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": ".",
        "paths": {
            "@film/*": [
                "packages/*/src"
            ],
            "tslib": [
                "node_modules/tslib/tslib.d.ts"
            ]
        }
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "packages/*/*",
        "apps/*/*"
    ]
}